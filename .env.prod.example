# ==========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env.prod and configure for your production environment

# ==========================================
# DATABASE
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=tasks_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ==========================================
# RABBITMQ
# ==========================================
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=your-rabbitmq-password-here
RABBITMQ_URL=amqp://admin:your-rabbitmq-password-here@rabbitmq:5672

# ==========================================
# JWT SECRETS (Use strong random values!)
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-too
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# FRONTEND URLs
# For localhost: use http://localhost:XXXX
# For production/network: use your server IP or domain
# ==========================================
VITE_API_URL=http://localhost:3001
VITE_WS_URL=http://localhost:3004

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:5173

# ==========================================
# EMAIL SERVICE (SMTP)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
MAIL_FROM=noreply@yourdomain.com
WEB_URL=http://localhost:5173

# ==========================================
# SERVICE PORTS
# ==========================================
API_GATEWAY_PORT=3001
WEB_PORT=5173
