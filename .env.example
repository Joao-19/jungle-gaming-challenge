# ===========================================
# ENVIRONMENT VARIABLES - DOCKER COMPOSE
# ===========================================
# Copie este arquivo para .env e preencha com seus valores reais
# cp .env.example .env

# ===========================================
# SECURITY
# ===========================================
# JWT Secret para assinatura de tokens (use uma string aleatória forte)
# Gere com: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this

# JWT Refresh Secret (diferente do JWT_SECRET)
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this

# JWT Token Expiration
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_DB=challenge_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ===========================================
# RABBITMQ
# ===========================================
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=your-rabbitmq-password-here
RABBITMQ_URL=amqp://admin:your-rabbitmq-password-here@rabbitmq:5672

# ===========================================
# CORS
# ===========================================
# URL do frontend para configuração de CORS
CORS_ORIGIN=http://localhost:5173

# ===========================================
# EMAIL SERVICE (SMTP)
# ===========================================
# Configurações SMTP para envio de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# Para Gmail: Crie uma "App Password" em https://myaccount.google.com/apppasswords
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
MAIL_FROM=Task Manager <noreply@taskmanager.com>

# ===========================================
# APPLICATION
# ===========================================
# URL do frontend (para links em emails)
WEB_URL=http://localhost:5173

# Portas dos serviços
API_GATEWAY_PORT=3001
WEB_PORT=5173
